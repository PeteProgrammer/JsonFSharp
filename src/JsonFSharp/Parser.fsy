%{
open JsonFSharp
%}

%start start
%token <string> STRING
%token <double> DOUBLE
%token <string> EXCEPTION
%token <bool> BOOL
%token NULL
%token LBRAC RBRAC COMMA
%token EOF
%type < JsonFSharp.ParseResult > start
%%

start: 
    | value EOF { Success $1 }
    | EXCEPTION { Failure $1 }

value:
    | STRING    { JsonString $1 }
    | DOUBLE    { JsonNumber $1 }
    | BOOL      { JsonBool $1 }
    | NULL      { JsonNull }
    | LBRAC
      arrayRev
      RBRAC     { JsonArray ($2 |> List.rev) }

arrayRev:
    |           { [] }
    | value     { [$1] }
    | arrayRev 
      COMMA
      value     { $3::$1 }